<div class="post">
  <h2 class="post-theme"><%= link_to post.theme.upcase, post %></h2>
  <p class="meta">Published <%= distance_of_time_in_words(post.created_at, Time.now) %> ago</p>
  
  <% if logged_in?(:site_admin) %>
    <p class="meta">
    <%= link_to post.status, toggle_status_post_path(post) %> /
    <%= link_to 'Edit', edit_post_path(post) if logged_in?(:site_admin) %> /
    <%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
    </p>
  <% end %>

  <p>
    <%= post.body %>
  </p>
</div>